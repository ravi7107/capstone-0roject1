pipeline {
    agent any
    environment {
        IMAGE_NAME = "hshar/webapp:latest"
        APP_DIR = "/var/www/html"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh """
                   mkdir -p $APP_DIR
                   docker pull $IMAGE_NAME
                   docker build -t webapp:latest .
                """
            }
        }
    }
    post {
        always {
            echo "Build stage finished for branch ${env.BRANCH_NAME}"
        }
        failure {
            echo "Build failed!"
        }
    }
}
