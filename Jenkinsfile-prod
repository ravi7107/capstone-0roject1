pipeline {
    agent any
    environment {
        IMAGE_NAME = "webapp:latest"
        APP_DIR = "/var/www/html"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy to Production') {
            when {
                branch 'master' // Only deploy for master
            }
            steps {
                echo "Deploying to production..."
                sh """
                   docker stop webapp || true
                   docker rm webapp || true
                   docker run -d --name webapp -p 80:80 -v $APP_DIR:/usr/share/nginx/html $IMAGE_NAME
                """
            }
        }
    }
    post {
        always {
            echo "Deployment stage finished for branch ${env.BRANCH_NAME}"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
