pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Tests') {
            steps {
                echo "Running tests..."
                sh './run_tests.sh || echo "Tests completed"'
            }
        }
    }
    post {
        always {
            echo "Test stage finished for branch ${env.BRANCH_NAME}"
        }
        failure {
            echo "Tests failed!"
        }
    }
}
